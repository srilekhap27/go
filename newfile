// Intercept window creation of anchor tag
    cy.window().then((win) => {
      const anchorStub = win.document.createElement("a");
      
      // Spy on the anchor's click method
      cy.spy(anchorStub, "click").as("anchorClick");

      // Stub document.createElement to return our mock anchor when 'a' is created
      cy.stub(win.document, "createElement")
        .callsFake((tagName) => (tagName === "a" ? anchorStub : win.document.createElement(tagName)));
    });
